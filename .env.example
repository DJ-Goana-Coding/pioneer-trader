# ================================================================
# PIONEER TRADER - ENVIRONMENT CONFIGURATION
# ================================================================

# EXCHANGE CREDENTIALS (Primary)
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET=your_mexc_secret_here

# LEGACY BINANCE (For migration reference - can be removed later)
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET=your_secret_key_here

# TRADING CONFIGURATION
EXECUTION_MODE=PAPER  # PAPER or LIVE - defaults to PAPER for safety
VORTEX_STAKE_USDT=8.0
VORTEX_STOP_LOSS_PCT=0.015

# RISK MANAGEMENT
MAX_ORDER_NOTIONAL=50.0
MIN_SLOT_SIZE=8.0

# REDIS CONFIGURATION
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=True

# SYSTEM CONFIGURATION
PORT=10000
DIAGNOSTIC_MODE=True

# SECURITY & AUTHENTICATION
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here
SECRET_KEY=your_secret_jwt_key_here_min_32_chars
ACCESS_TOKEN_EXPIRE_MINUTES=30

# V19 SECURITY & ARCHIVAL
ENABLE_MALWARE_PROTECTION=True
SHADOW_ARCHIVE_PATH=/tmp/shadow_archive
ENABLE_GITHUB_PAGES_EXPORT=False