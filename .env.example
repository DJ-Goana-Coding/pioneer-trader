# Security (REQUIRED in production)
# Generate with: openssl rand -hex 32
SECRET_KEY=your_secret_key_here_use_openssl_rand_hex_32

# Exchange API Keys - ‚ö†Ô∏è NEVER commit real values!
# Binance (legacy support)
BINANCE_API_KEY=
BINANCE_SECRET_KEY=

# MEXC (Vortex Engine) - Get from: https://www.mexc.com/user/openapi
MEXC_API_KEY=
MEXC_SECRET_KEY=

# Execution Mode
EXECUTION_MODE=PAPER  # Options: PAPER, TESTNET, LIVE

# Vortex Engine Configuration
VORTEX_STAKE_USDT=8.0  # Amount per trade in USDT
VORTEX_STOP_LOSS_PCT=0.015  # 1.5% stop-loss (Ejector Seat)
VORTEX_PULSE_SECONDS=8  # Trading pulse interval

# V19 Fleet Configuration
UI_THEME=OVERKILL  # Options: OVERKILL, ZEN
SAFETY_MODULATOR=5  # 0-10 scale for trade aggression

# GitHub Authentication (optional)
ENABLE_GITHUB_AUTH=false
GITHUB_CLIENT_ID=

# Swarm Configuration
PHI_DRONE_COUNT=6
ENABLE_MALWARE_PROTECTION=true

# Archival
ENABLE_GITHUB_PAGES_EXPORT=false
SHADOW_ARCHIVE_PATH=/tmp/shadow_archive
